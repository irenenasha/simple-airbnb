<%= form_for @flat do |f| %>
  <div>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <div>
  <%= f.label :address %>
  <%= f.text_field :address %>
  </div>
  <div>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>
   <div>
  <%= f.label :price_per_night%>
  <%= f.text_field :price_per_night%>
  </div>
  <div>
  <%= f.label :number_of_guests%>
  <%= f.text_field :number_of_guests, collection: 0..20 %>
  </div>
  <%= f.submit class: 'btn btn-success btn-lg btn-block'%>
  <%= f.submit class: 'btn btn- btn-lg btn-block'%>
<% end %>
