<div class="container">
  <div>
  <%= render 'navbar_wagon_without_login' %>
  </div>
</div>

<div class="container">
  <h1>All our flats (<%= Flat.count %>)</h1>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-12 col-sm-6 col-md-4">
        <div class="card-trip my-3">
          <img src="https://source.unsplash.com/random", width="200", height="200" />
          <div class="card-trip-infos">
            <div>
              <h2><%= flat.name %></h2>
              <p><%= flat.address %></p>
              <p><%= flat.description[0..30]  %>...</p>
            </div>
            <h2 class="card-trip-pricing mx-3"><i class="fas fa-dollar-sign"></i> â‚¬<%=flat.price_per_night %></h2>
            <h2 class="card-trip-pricing mx-3"><i class="fas fa-users"></i> number of people: <%=flat.number_of_guests %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/irenenasha" class="card-trip-user avatar-bordered" />
          </div>
          <div>
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit Flat", edit_flat_path(flat) %>
            <%= link_to flat_path(flat), method: 'delete', data: {confirm: "Are you sure?"}  do %>
              Delete Flat
            <% end %>
          </div>
        </div>


    </div>

    <% end %>
  </div>
</div>
