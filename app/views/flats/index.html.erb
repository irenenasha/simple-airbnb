<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h1>Simple AirBnb</h1>
  <%= link_to 'Airbnb', flats_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Add new Flat", new_flat_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <h1>All our flats (<%= Flat.count %>)</h1>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-12 col-sm-6 col-md-4">
      <%= link_to flat_path(flat) do %>

        <div class="card-trip my-3">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= flat.name %></h2>
              <p><%= flat.address %></p>
              <p><%= flat.description[0..30]  %>...</p>
            </div>
            <h2 class="card-trip-pricing mx-3"><i class="fas fa-dollar-sign"></i> <%=flat.price_per_night %></h2>
            <h2 class="card-trip-pricing mx-3"><i class="fas fa-users"></i> <%=flat.number_of_guests %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
      <% end %>

    </div>

    <% end %>
  </div>
</div>
